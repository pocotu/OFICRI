{
  "name": "oficri-tests",
  "version": "1.0.0",
  "description": "Test suite for OFICRI system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/config/**",
      "!server/models/**"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": ["./tests/setup.js"]
  }
}
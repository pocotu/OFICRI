# Configuración de la Aplicación
NODE_ENV=test
PORT=3001
BASE_URL=http://localhost:3001

# Secretos
JWT_SECRET=oficri-jwt-test-secret-2024
SESSION_SECRET=oficri-session-test-secret-2024
CSRF_SECRET=oficri-csrf-test-secret-2024
SETUP_KEY=oficri-setup-test-key-2024

# Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=kali
DB_NAME=Oficri_sistema
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_DEBUG=true

# Seguridad
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION=300000
SESSION_TIMEOUT=1800000
SESSION_MAX_AGE=86400000

# CORS - Configuración específica para pruebas
CORS_ORIGIN=http://localhost:3001,http://127.0.0.1:3001

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE=logs/test.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# Base de datos
DB_PORT=3306

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_EXPIRES_IN=1h

# Sesiones
SESSION_COOKIE_NAME=sessionId
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Usuario de prueba
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123
TEST_USER_ROLE=admin

# Configuración de archivos
UPLOAD_DIR=uploads/test
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/png,image/gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=3600000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Monitoreo
MONITORING_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_MONITORING=true
SYSTEM_MONITORING=true
CONNECTION_MONITORING=true
MEMORY_MONITORING=true
RESPONSE_TIME_MONITORING=true

# Helmert
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
SESSION_ENABLED=true 
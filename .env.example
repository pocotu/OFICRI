# Configuración de Entorno
# Opciones: 'development', 'testing', 'production'
NODE_ENV=development

# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=kali
DB_NAME=oficri_sistema
DB_PORT=3306

# Configuración de Servidor
PORT=3000
HOST=localhost

# Secreto JWT (Cambiar en producción)
JWT_SECRET=oficri-jwt-secret-2024-secure

# Configuración CORS
# Lista separada por comas de dominios permitidos
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/oficri-sistema.log

# Límites de Archivos
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Configuración de Seguridad
PASSWORD_SALT_ROUNDS=10
SESSION_TIMEOUT=3600  # 1 hora en segundos
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=300  # 5 minutos en segundos 
# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=oficri_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Deployment Configuration
DROPLET_IP=your_droplet_ip
REPO_URL=your_github_repo_url

# PM2 Configuration
PM2_INSTANCES=max
PM2_MEMORY_LIMIT=1G

# Email Configuration (si se implementa en el futuro)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# File Upload Configuration (si se implementa en el futuro)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB en bytes

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
RATE_LIMIT_WINDOW=15 # minutos
RATE_LIMIT_MAX_REQUESTS=100 # m√°ximo de peticiones por ventana
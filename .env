# Configuración de la Aplicación
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Secretos
JWT_SECRET=oficri-jwt-secret-2024-secure
SESSION_SECRET=oficri-session-secret-2024-secure
CSRF_SECRET=oficri-csrf-secret-2024-secure
SETUP_KEY=oficri-setup-key-2024-secure

# Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=kali
DB_NAME=Oficri_sistema
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_DEBUG=true

# Seguridad
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION=300000
SESSION_TIMEOUT=1800000
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d
